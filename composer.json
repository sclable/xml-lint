{
    "name": "sclable/xml-lint",
    "description": "A php cli tool to lint and validate xml files.",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Rutz",
            "email": "michael.rutz@sclable.com"
        },
        {
            "name": "Hakan Ã–zkan",
            "email": "hakan.ozkan@sclable.com"
        }
    ],
    "keywords": [
        "xml",
        "lint",
        "cli",
        "xsd",
        "xml schema"
    ],
    "bin": ["bin/xmllint"],
    "require": {
        "php": "8.1.*|8.2.*|8.3.*|8.4.*",
        "symfony/console": "5.3.*|5.4.*|6.*|7.*",
        "symfony/finder": "5.3.*|5.4.*|6.*|7.*",
        "ext-libxml": "*",
        "ext-dom": "*"
    },
    "require-dev": {
        "behat/behat": "^3.0",
        "phpunit/phpunit": "^10"
    },
    "autoload": {
        "psr-4": {
            "sclable\\xmlLint\\": "src/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "sclable\\xmlLint\\tests\\": "tests/"
        }
    }
}
