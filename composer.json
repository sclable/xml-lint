{
    "name": "sclable/xml-lint",
    "description": "A php cli tool to lint and validate xml files.",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Rutz",
            "email": "michael.rutz@sclable.com"
        }
    ],
    "keywords": [
        "xml",
        "lint",
        "cli",
        "xsd",
        "xml schema"
    ],
    "bin": ["bin/xmllint"],
    "require": {
        "php": "~7.3.0 || ~7.4.0 || ~8.0.0 || ~8.1.0",
        "ext-dom": "*",
        "ext-libxml": "*",
        "symfony/console": "^3.4 || ^4.4 || ^5 || ^6",
        "symfony/finder": "^3.4 || ^4.4 || ^5 || ^6"
    },
    "require-dev": {
        "behat/behat": "^3.0",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "sclable\\xmlLint\\": "src/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "sclable\\xmlLint\\tests\\": "tests/"
        }
    }
}
